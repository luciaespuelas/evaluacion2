
#include<iostream>
#include<stdio.h>

using namespace std; 	
 
int main(){
	char letra[]="macarrones";
	int cont;
	for(cont=0;cont<=9;cont++){
		printf("dame la letra letra[%d]=%c\n",cont,letra[cont]);//printea la letra de la palabra en la posicion 0
	}


	return 0; 
}

