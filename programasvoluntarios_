#include<iostream>
#include<stdio.h>
using namespace std;

// Lee un numero y escribe su valor absoluto
int main(){
	int num, abs;
	cout << "Introduce un numero: ";
	cin >> num;
	cout << "El valor absoluto de " << num << " es: ";
	if (num < 0)
		num = -num;
	cout << num;
	return 0;
}
